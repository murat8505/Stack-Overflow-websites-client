<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/answerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/answerMetaInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="2dp" >

            <TextView
                android:id="@+id/answerScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/rounded_border_delft"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/answerOptionsContextMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="-5dp"
                android:paddingTop="5dp"
                android:src="@drawable/control_bottom_right" />

            <TextView
                android:id="@+id/answerAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_toLeftOf="@id/answerOptionsContextMenu"
                android:layout_toRightOf="@id/answerScore"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/answerCommentsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/answerScore"
                android:layout_below="@id/answerScore"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"
                android:textSize="9sp" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/answerBodyScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="2dp" >

            <LinearLayout
                android:id="@+id/answerBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:orientation="vertical" >
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/goBackToQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="7dp"
        android:src="@drawable/question_mark_small" />

    <LinearLayout
        android:id="@+id/qTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="7dp"
        android:background="@drawable/rounded_border_grey_min_padding"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1" >

        <com.prasanna.android.views.HtmlTextView
            android:id="@+id/qTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight=".90"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/questionCloseAction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/navigation_cancel" />
    </LinearLayout>

</FrameLayout>