<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_border_grey_min_padding"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" >

        <CheckBox
            android:id="@+id/deleteQuestionCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:button="@drawable/checkbox"
            android:gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/questionScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_border_delft"
            android:textColor="@color/delft"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/questionOptionsContextMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="-5dp"
            android:src="@drawable/control_bottom_right" />

        <TextView
            android:id="@+id/questionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/questionOptionsContextMenu"
            android:layout_toRightOf="@id/questionScore"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/questionCountLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" >

        <TextView
            android:id="@+id/questionViewsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="@string/views"
            android:textColor="@color/delft"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/questionAnswersValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/questionViewsValue"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@id/questionViewsValue"
            android:gravity="center"
            android:text="@string/answers"
            android:textColor="@color/delft"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/questionOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/questionViewsValue"
            android:gravity="center"
            android:textColor="@color/delft"
            android:textSize="10sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/questionSnippetTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" />

</LinearLayout>