<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/criteriaTable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <TableRow
        android:id="@+id/query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_grey_min_padding"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/searchQuery"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_border_grey_min_padding"
            android:cursorVisible="true"
            android:inputType="text"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tagged"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_grey_min_padding"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/taggedLabel"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="0.3"
            android:gravity="left"
            android:text="@string/search_tagged"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <AutoCompleteTextView
            android:id="@+id/searchSelectedTag"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_weight="0.7"
            android:background="@drawable/rounded_border_grey_min_padding"
            android:cursorVisible="true"
            android:inputType="text"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:id="@+id/notTagged"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_grey_min_padding"
        android:weightSum="1" >

        <TextView
            android:id="@+id/notTaggedLabel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_weight="0.3"
            android:gravity="left"
            android:text="@string/search_notTagged"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <AutoCompleteTextView
            android:id="@+id/searchNoLikeTag"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_weight="0.7"
            android:background="@drawable/rounded_border_grey_min_padding"
            android:cursorVisible="true"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:id="@+id/answered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_grey_min_padding"
        android:weightSum="1" >

        <TextView
            android:id="@+id/hasAnswersLabel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_weight="0.35"
            android:gravity="left|center"
            android:text="@string/search_answers"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/searcOnlyWithAnswers"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_weight="0.15"
            android:button="@drawable/checkbox"
            android:gravity="left|center" />

        <TextView
            android:id="@+id/answeredLabel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_weight="0.35"
            android:gravity="left|center"
            android:text="@string/search_answered"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/searchAnswered"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_weight="0.15"
            android:button="@drawable/checkbox"
            android:gravity="left|center" />
    </TableRow>

    <TableRow
        android:id="@+id/sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_grey_min_padding"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/sortLabel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_weight="0.3"
            android:gravity="left|center"
            android:text="@string/search_sort"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/searchSortSpinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_weight="0.7"
            android:drawSelectorOnTop="true"
            android:spinnerMode="dropdown" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/runCriteria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:src="@drawable/navigation_accept_dark_48x48" />

        <ImageView
            android:id="@+id/clearCriteria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/content_undo_dark_48x48" />
    </TableRow>

</TableLayout>