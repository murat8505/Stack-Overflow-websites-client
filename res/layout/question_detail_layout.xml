<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/questionResponses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/answers"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="top|center_vertical"
            android:layout_weight="0.495"
            android:background="@drawable/square_bottom_edges"
            android:clickable="false"
            android:gravity="top|center"
            android:text="@string/answers"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/spaceSeparator"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.005" />

        <TextView
            android:id="@+id/comments"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="top|center_vertical"
            android:layout_weight="0.495"
            android:background="@drawable/square_bottom_edges"
            android:gravity="top|center"
            android:text="@string/comments"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/questionStatsControl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_grey"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:id="@+id/questionScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/questionTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.9"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" >

            <TextView
                android:id="@+id/questionViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/labelViews"
                android:textColor="@color/black"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/questionTimeAndUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/questionViews"
                android:gravity="right"
                android:text="@string/labelAcceptRate"
                android:textColor="@color/black"
                android:textSize="9dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/acceptedAnswerLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:src="@drawable/tick_accept"
                android:visibility="gone" />

            <TextView
                android:id="@+id/currentAnswerOfTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/acceptedAnswerLogo"
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/currentAnswerAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="1dp"
                android:layout_below="@id/currentAnswerOfTotal"
                android:layout_toRightOf="@id/acceptedAnswerLogo"
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:visibility="gone" />
        </RelativeLayout>

        <com.prasanna.android.views.FlingScrollView
            android:id="@+id/questionDisplayFlingScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp" >

            <LinearLayout
                android:id="@+id/questionAnswerDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="3dp"
                android:orientation="vertical" >
            </LinearLayout>
        </com.prasanna.android.views.FlingScrollView>
        <!--
             <com.prasanna.android.views.FlingWebView
            android:id="@+id/questionBody"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/rounded_border_grey"
            android:textColor="@color/black"
            android:textSize="10dp" />
        -->
    </LinearLayout>

</LinearLayout>