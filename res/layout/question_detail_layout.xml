<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/questionResponses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/answers"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="top|center_vertical"
            android:layout_weight="0.495"
            android:background="@drawable/square_bottom_edges_grey_bg"
            android:clickable="false"
            android:gravity="top|center"
            android:text="@string/answers"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/spaceSeparator"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.005" />

        <TextView
            android:id="@+id/comments"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="top|center_vertical"
            android:layout_weight="0.495"
            android:background="@drawable/square_bottom_edges"
            android:clickable="false"
            android:gravity="top|center"
            android:text="@string/comments"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/questionTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_delft"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/questionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/viewQuestionAuthorProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:contentDescription="@string/viewProfile"
                    android:src="@drawable/click_to_view" />

                <TextView
                    android:id="@+id/questionOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_toLeftOf="@id/viewQuestionAuthorProfile"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="11dp" />
            </RelativeLayout>

            <View
                android:id="@+id/hrInQuestionTitle"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/lightGrey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/questionScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/black"
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/questionViews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/questionScore"
                    android:text="@string/labelViews"
                    android:textColor="@color/black"
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/questionTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="9dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_border_delft"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/answerHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="1dp"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/acceptedAnswerLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:contentDescription="@string/answers"
                    android:src="@drawable/tick_accept"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/currentAnswerOfTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dp"
                    android:layout_toRightOf="@id/acceptedAnswerLogo"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <View
                    android:id="@+id/answerAuthorDetailDivider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/currentAnswerOfTotal"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/lightGrey" />

                <ImageView
                    android:id="@+id/viewAnswerAuthorProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/answerAuthorDetailDivider"
                    android:layout_gravity="right"
                    android:src="@drawable/click_to_view" />

                <TextView
                    android:id="@+id/currentAnswerAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/currentAnswerOfTotal"
                    android:layout_gravity="right"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@id/viewAnswerAuthorProfile"
                    android:gravity="right"
                    android:text="@string/by"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/currentAnswerScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignTop="@id/currentAnswerAuthor"
                    android:layout_below="@id/answerAuthorDetailDivider"
                    android:layout_gravity="left"
                    android:layout_marginLeft="1dp"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="11dp" />
            </RelativeLayout>

            <com.prasanna.android.views.FlingScrollView
                android:id="@+id/questionDisplayFlingScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp" >

                <LinearLayout
                    android:id="@+id/questionAnswerDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical" >
                </LinearLayout>
            </com.prasanna.android.views.FlingScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>