<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/siteListRow"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/rounded_border_grey"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/isDefaultSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/circle_white" />

    <TextView
        android:id="@+id/siteName"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/isDefaultSite"
        android:gravity="left|center_vertical"
        android:textColor="@color/black"
        android:textIsSelectable="false"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/siteUserTypeRegistered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:gravity="right|center_vertical"
            android:text="@string/registered"
            android:textColor="@color/darkGreen"
            android:textIsSelectable="false"
            android:textSize="8sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/writePermissionEnabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:src="@drawable/dark_24x24_edit"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/siteAudience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/siteName"
        android:layout_below="@id/siteName"
        android:gravity="left|center_vertical"
        android:textColor="@color/delft"
        android:textIsSelectable="false"
        android:textSize="12sp" />

</RelativeLayout>