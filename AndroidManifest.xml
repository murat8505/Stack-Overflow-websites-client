<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prasanna.android.stacknetwork"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <service android:name=".intent.QuestionDetailsIntentService" />
        <service android:name=".intent.UserDetailsIntentService" />
        <service android:name=".intent.UserQuestionsIntentService" />
        <service android:name=".intent.UserAnswersIntentService" />
        <service android:name=".intent.SearchForQuestionsIntentService" />
        <service android:name=".intent.UserDeauthenticateAppIntentService" />
        <service android:name=".intent.UserInboxIntentService" />
        <service android:name=".intent.UserInboxIntentService" />
        <service android:name=".intent.UserSitesIntentService" />
        <service android:name=".intent.TagFaqIntentService" />

        <activity
            android:name=".LoginActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StackNetworkListActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name=".LogoutActivity"
            android:label="@string/app_name"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".OAuthActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".QuestionsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".QuestionSearchResultsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".UserInboxActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".UserProfileActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name=".UserTabsWidget"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".QuestionDetailActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ArchiveDisplayActivity"
            android:configChanges="orientation|screenSize" />
    </application>

</manifest>