<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/codeBg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/codeQuickActionMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_highlight"
        android:padding="5dp"
        android:src="@drawable/menu_overflow" />

    <TextView
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/codeQuickActionMenu"
        android:padding="2dp"
        android:textColor="@color/delft"
        android:textIsSelectable="true"
        android:textSize="11sp" />

</RelativeLayout>