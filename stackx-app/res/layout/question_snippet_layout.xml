<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_list_item"
        android:orientation="vertical" >

        <include layout="@layout/item_title" />

        <RelativeLayout
            android:id="@+id/questionCountLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" >

            <TextView
                android:id="@+id/questionViewsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="3dp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:text="@string/views"
                android:textColor="@color/delft"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/questionOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/questionViewsValue"
                android:gravity="center"
                android:textColor="@color/delft"
                android:textSize="10sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/questionSnippetTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:orientation="vertical" />
    </LinearLayout>

</FrameLayout>