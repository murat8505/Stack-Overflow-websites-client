<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/postTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/rounded_border_grey"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/postTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/postSite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/postTitle"
            android:layout_margin="3dp"
            android:gravity="left"
            android:textColor="@color/black"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/viewQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/postTitle"
            android:layout_marginRight="2dp"
            android:background="@drawable/selector_list_item"
            android:clickable="false"
            android:enabled="false"
            android:gravity="left"
            android:text="@string/goToQuestion"
            android:textColor="@color/lightGrey"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/viewAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/postTitle"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/viewQuestion"
            android:background="@drawable/selector_list_item"
            android:gravity="left"
            android:text="@string/viewAnswer"
            android:textColor="@color/black"
            android:textIsSelectable="false"
            android:textSize="15sp"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/responseItemScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/postTitleLayout"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/rounded_border_delft"
        android:textColor="@color/black"
        android:textIsSelectable="false"
        android:textSize="15sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/responseContextMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/postTitleLayout"
        android:layout_centerVertical="true"
        android:padding="6dp"
        android:src="@drawable/control_bottom_right" />

    <TextView
        android:id="@+id/responseUserAndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/responseItemScore"
        android:layout_alignTop="@id/responseItemScore"
        android:layout_below="@id/postTitleLayout"
        android:layout_centerVertical="true"
        android:layout_margin="3dp"
        android:layout_toLeftOf="@id/responseContextMenu"
        android:gravity="center"
        android:textColor="@color/black"
        android:textIsSelectable="true"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/postType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/responseItemScore"
        android:layout_alignTop="@id/responseItemScore"
        android:layout_below="@id/postTitleLayout"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/responseItemScore"
        android:gravity="center"
        android:textColor="@color/black"
        android:textIsSelectable="false"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/postBodyScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/postTitleLayout"
        android:layout_alignRight="@id/postTitleLayout"
        android:layout_below="@id/responseUserAndTime"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/postBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/postContext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_border_delft"
                android:orientation="vertical"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>